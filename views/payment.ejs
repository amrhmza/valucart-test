                        <div class="input-group" style="margin-top: 20px;margin-bottom: 20px">
                            <input type="text" class="form-control" placeholder="Enter Code">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-coupon">Apply</button>
                            </div>
