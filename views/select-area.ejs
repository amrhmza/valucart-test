<% include template/header1.ejs %>
    <div class="container container1" ng-app="myapp" ng-controller="select_area">
        <div class="row text-center">
            <form name="selectArea" method="POST">
                <div class="text-center">
                    <img src="img/logo.png" alt="ValuCart-logo" class="img-responsive" />
                    <!-- <h4 class="logo-text">ValuCart</h4> -->
                </div>
                <h2 class="select-city">Which area do you live in?</h2>
                <select ng-model="area">
                    <option>Select your area</option>
                    <option value="dubai">Dubai</option>
                    <option value="sharjah">Sharjah</option>
                    <option value="abu">Abu Dhabi</option>
                </select>

                <a href="/">
                    <h5>Change your city?</h5>
                </a>
                <div class="text-center">
                    <button class="btn next-btn" type="submit">Start Shopping</button>
                </div>
            </form>
        </div>
    </div>
