<script type="text/javascript" src="js/jquery.cookie.min.js"></script>
<script type="text/javascript">
    $(function() {
        
        console.log("tokenId= "+$.cookie("tokenId")+", customer= " + $.cookie("userId"));

        $('#login-form').submit(function(e) {
            e.preventDefault();
            var username = $(".login_username").val();
            var password = $(".login_password").val();

            if(username=="") $(".login_username").parent(".form-group").addClass("has-error");
            else $(".login_username").parent(".form-group").removeClass("has-error");

            if(password=="") $(".login_password").parent(".form-group").addClass("has-error");
            else $(".login_password").parent(".form-group").removeClass("has-error");

            
            var data = {username, password};

            $.ajax({
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                url: 'http://18.191.0.240:3000/auth/login'
            }).done(function(resp){
                if(resp.status=="success"){
                    //console.log("tokenId="+ resp.token+", customer=" + resp.user_id);
                    $.cookie('tokenId', resp.token, { expires: 7, path: '/' });
                    $.cookie('userId', resp.user_id, { expires: 7, path: '/' });
                    location. reload(true);
                }
                else{
                    console.log("Invalid Username/Password");
                }
            }).fail(function(r){
                console.log("Login Failed"+ r.status);
            });
        
        });
    });
</script>